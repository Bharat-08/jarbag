generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  CANDIDATE
  MENTOR
  ADMIN
}

model User {
  id            Int            @id @default(autoincrement())
  email         String         @unique
  password      String
  name          String?
  role          Role           @default(CANDIDATE)
  expertise     String?
  documentUrl   String?
  isPremium     Boolean        @default(false)
  // Mentor Profile Fields
  yearsOfExperience Int?
  rating            Float?    @default(5.0)
  reviewCount       Int?      @default(0)
  price             Int?      @default(999)
  bio               String?
  rank              String?
  profileImage      String?
  refreshTokens RefreshToken[]
  mentorshipSlots MentorshipSlot[]
  courses       Course[]
}

model MentorshipSlot {
  id        Int      @id @default(autoincrement())
  mentorId  Int
  mentor    User     @relation(fields: [mentorId], references: [id])
  date      DateTime // Date of the slot
  startTime String   // "10:00 AM"
  endTime   String   // "11:00 AM"
  duration  Int      // Duration in minutes (e.g., 60)
  price     Int      // Price for this specific slot
  isBooked  Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Course {
  id          Int      @id @default(autoincrement())
  mentorId    Int
  mentor      User     @relation(fields: [mentorId], references: [id])
  title       String
  description String?
  videoUrl    String
  price       Int
  createdAt   DateTime @default(now())
}

model RefreshToken {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  expiresAt DateTime
}

model Video {
  id        Int      @id @default(autoincrement())
  url       String
  createdAt DateTime @default(now())
}

model TATImage {
  id           Int      @id @default(autoincrement())
  url          String
  description1 String
  description2 String
  description3 String
  createdAt    DateTime @default(now())
}

